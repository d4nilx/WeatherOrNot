<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:WeatherOrNot.View_Models"
             x:Class="WeatherOrNot.WeatherDetailPage"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewModels:MainViewModel/>
    </ContentPage.BindingContext>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2C3E50" Offset="0.0" />
                <GradientStop Color="#4CA1AF" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollView Margin="0,60,0,0"> <VerticalStackLayout Padding="30" Spacing="10" VerticalOptions="Center">
                
                <ActivityIndicator IsRunning="{Binding IsBusy}" Color="White" />
                <Label Text="{Binding ErrorMessage}" TextColor="Red" HorizontalOptions="Center"/>

                <VerticalStackLayout IsVisible="{Binding IsVisible}" Spacing="10">
                    <Label Text="{Binding WeatherData.Location.Name}" FontSize="40" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White"/>
                     <Label Text="{Binding WeatherData.Location.Country}" FontSize="20" HorizontalOptions="Center" TextColor="#EEE"/>
                     
                     <HorizontalStackLayout HorizontalOptions="Center" Spacing="15" Margin="0,20,0,0">
                        <Image Source="{Binding IconUrl}" WidthRequest="80" HeightRequest="80"/>
                        <Label Text="{Binding WeatherData.Current.Temp_C, StringFormat='{0:F0}°'}" FontSize="80" FontAttributes="Bold" TextColor="White" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <Label Text="{Binding WeatherData.Current.Condition.Text}" FontSize="24" HorizontalOptions="Center" TextColor="White" Margin="0,0,0,20"/>

                    <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*,*" RowSpacing="15" ColumnSpacing="15" Margin="0,10,0,20">
                         <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="#20FFFFFF" CornerRadius="20" BorderColor="Transparent" Padding="15">
                            <VerticalStackLayout>
                                <Label Text="FEELS LIKE" TextColor="#CCC" FontSize="12" FontAttributes="Bold"/>
                                <Label Text="{Binding WeatherData.Current.FeelsLike_C, StringFormat='{0:F1}°'}" TextColor="White" FontSize="28" FontAttributes="Bold" Margin="0,5,0,0"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="#20FFFFFF" CornerRadius="20" BorderColor="Transparent" Padding="15">
                            <VerticalStackLayout>
                                <Label Text="HUMIDITY" TextColor="#CCC" FontSize="12" FontAttributes="Bold"/>
                                <Label Text="{Binding WeatherData.Current.Humidity, StringFormat='{0}%'}" TextColor="White" FontSize="28" FontAttributes="Bold" Margin="0,5,0,0"/>
                            </VerticalStackLayout>
                        </Frame>
                         <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="#20FFFFFF" CornerRadius="20" BorderColor="Transparent" Padding="15">
                            <VerticalStackLayout>
                                <Label Text="WIND" TextColor="#CCC" FontSize="12" FontAttributes="Bold"/>
                                <Label Text="{Binding WeatherData.Current.Wind_Kph, StringFormat='{0} km/h'}" TextColor="White" FontSize="24" FontAttributes="Bold" Margin="0,5,0,0"/>
                                <Label Text="{Binding WeatherData.Current.Wind_dir}" TextColor="#DDD" FontSize="14"/>
                            </VerticalStackLayout>
                        </Frame>
                        <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="#20FFFFFF" CornerRadius="20" BorderColor="Transparent" Padding="15">
                            <VerticalStackLayout>
                                <Label Text="INFO" TextColor="#CCC" FontSize="12" FontAttributes="Bold"/>
                                <Label Text="{Binding WeatherData.Location.Region}" TextColor="White" FontSize="14" LineBreakMode="TailTruncation" Margin="0,5,0,0"/>
                                <Label Text="{Binding WeatherData.Location.LocalTime}" TextColor="#DDD" FontSize="12" Margin="0,2,0,0"/>
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <Grid ColumnDefinitions="Auto, *" Padding="20,10" VerticalOptions="Start">
            
            <Button Grid.Column="0"
                    Text="❮ Back"
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="#30000000" 
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="40"
                    Padding="15,0"/>

            <Button Grid.Column="1"
                    Text="+ Add"
                    Command="{Binding SaveCityCommand}"
                    HorizontalOptions="End"
                    BackgroundColor="#30000000"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="40"
                    Padding="15,0"/>
        </Grid>

    </Grid>
</ContentPage>